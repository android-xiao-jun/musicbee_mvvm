<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="dataEmpty"
            type="com.musichive.common.bean.home.HomeEmptyBean" />

        <variable
            name="viewModel"
            type="com.musichive.common.viewmodel.HomeFragmentViewModel" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/empty_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/no_market" />

        <TextView
            android:id="@+id/empty_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="@{dataEmpty.hintText}"
            android:textColor="#b4b4b4"
            android:textSize="12sp" />

        <Button
            android:id="@+id/empty_btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/empty_text_view"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{()->viewModel.loadOne()}"
            android:text="重新加载" />

    </LinearLayout>
</layout>