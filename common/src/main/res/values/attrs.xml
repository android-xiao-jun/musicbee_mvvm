<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlayerToolHelperView">
        <!--    （没播放的时候）距离右边的边距    -->
        <attr name="viewRight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="fotor_CI_border_width" format="dimension" />
        <attr name="fotor_CI_border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="AvatarImageView">
        <attr name="defaultAvatar" format="reference" />
    </declare-styleable>

    <declare-styleable name="RoundCornerImageView">
        <attr name="round_radius" format="dimension" />
        <attr name="leftTop_Radius" format="dimension" />
        <attr name="rightTop_Radius" format="dimension" />
        <attr name="leftBottom_Radius" format="dimension" />
        <attr name="rightBottom_Radius" format="dimension" />
        <attr name="selected_Stroke_Width" format="dimension" />
        <attr name="selected_Stroke_Color" format="color" />
        <attr name="background_Color" format="color" />
    </declare-styleable>

    <declare-styleable name="AvatarImageTagView">
        <attr name="defaultAvatarTag" format="reference" />
        <attr name="aiTag" format="enum">
            <enum name="tag_default" value="0" />
            <enum name="tag_personal" value="1" />
            <enum name="tag_enterprise" value="2" />
        </attr>

        <attr name="fotor_CI_border_width_tag" format="dimension" />
        <attr name="fotor_CI_border_color_tag" format="color" />
    </declare-styleable>

    <style name="style_playlist_animation">
        <item name="android:windowEnterAnimation">@anim/anim_popplaylist_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popplaylist_out</item>
        <item name="backgroundColor">#80000000</item>
    </style>

    <declare-styleable name="AppMultiStateView">
        <attr name="emptyStr" format="string" />
        <attr name="emptySrc" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="PlayerSeekBar">
        <attr name="PlayerSeekBar_tickBarHeight" format="dimension"/>
        <attr name="PlayerSeekBar_tickBarColor" format="color"/>
        <attr name="PlayerSeekBar_circleButtonColor" format="color"/>
        <attr name="PlayerSeekBar_circleButtonTextColor" format="color"/>
        <attr name="PlayerSeekBar_circleButtonTextSize" format="dimension"/>
        <attr name="PlayerSeekBar_circleButtonRadius" format="dimension"/>
        <attr name="PlayerSeekBar_circleApertureWidth" format="dimension"/>
        <attr name="PlayerSeekBar_circleApertureColor" format="color"/>
        <attr name="PlayerSeekBar_progressHeight" format="dimension"/>
        <attr name="PlayerSeekBar_progressColor" format="color"/>
        <attr name="PlayerSeekBar_selectProgress" format="integer"/>
        <attr name="PlayerSeekBar_startProgress" format="integer"/>
        <attr name="PlayerSeekBar_maxProgress" format="integer"/>
        <attr name="PlayerSeekBar_isShowButtonText" format="boolean"/>
        <attr name="PlayerSeekBar_isShowButton" format="boolean"/>
        <attr name="PlayerSeekBar_isRound" format="boolean"/>
        <attr name="PlayerSeekBar_borderSize" format="dimension"/>
        <attr name="PlayerSeekBar_borderColor" format="color"/>

        <attr name="PlayerSeekBar_progressDrawable" format="reference"/>
        <attr name="PlayerSeekBar_circleDrawable" format="reference"/>
        <attr name="PlayerSeekBar_progressDefaultDrawable" format="reference"/>
    </declare-styleable>
</resources>